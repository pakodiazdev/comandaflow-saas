# ===========================================
# DOCKER PROJECT CONFIGURATION
# ===========================================
PROJECT_PREFIX=cfsaas

# ===========================================
# DOCKER PORTS CONFIGURATION
# ===========================================

# Application Ports
WEB_PORT=80                     # Puerto HTTP para nginx (recomendado: 80)
WEB_HTTPS_PORT=443              # Puerto HTTPS para nginx (recomendado: 443)
POSTGRES_PORT=5433              # Puerto para PostgreSQL (default: 5433)
PGADMIN_PORT=8082               # Puerto para PgAdmin (default: 8082)
MAILHOG_SMTP_PORT=1025          # Puerto SMTP para MailHog (default: 1025)
MAILHOG_WEB_PORT=8025           # Puerto web para MailHog (default: 8025)

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=postgres
DB_NAME=commandaflow_saas
DB_USER=postgres
DB_PASS=secret

# ===========================================
# PGADMIN CONFIGURATION
# ===========================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASS=secret

# ===========================================
# MAIL CONFIGURATION (Mailhog)
# ===========================================
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_FROM_ADDRESS=noreply@comandaflow.local
MAIL_FROM_NAME="ComandaFlow SaaS"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME="ComandaFlow SaaS"
APP_ENV=local
APP_DEBUG=true
APP_URL=https://comandaflow.local
APP_KEY=

# ===========================================
# PHP CONFIGURATION
# ===========================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M