# ComandaFlow SaaS - Docker Configuration
# Copy this file to .env and modify as needed

# ===========================================
# DOCKER PROJECT CONFIGURATION
# ===========================================
PROJECT_PREFIX=cfsaas

# ===========================================
# DOCKER PORTS CONFIGURATION
# ===========================================

# Application Ports
WEB_PORT=80                     # Puerto para la aplicación web (nginx) - HTTP
WEB_HTTPS_PORT=443              # Puerto para la aplicación web (nginx) - HTTPS
POSTGRES_PORT=5433              # Puerto para PostgreSQL
PGADMIN_PORT=8082               # Puerto para PgAdmin
MAILHOG_SMTP_PORT=1025          # Puerto SMTP para MailHog
MAILHOG_WEB_PORT=8025           # Puerto web para MailHog

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

DB_NAME=commandaflow_saas
DB_USER=postgres
DB_PASS=secret

# PgAdmin Configuration
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASS=secret

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=postgres
DB_NAME=commandaflow_saas
DB_USER=postgres
DB_PASS=secret

# ===========================================
# PGADMIN CONFIGURATION
# ===========================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASS=secret

# ===========================================
# MAIL CONFIGURATION (Mailhog)
# ===========================================
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_FROM_ADDRESS=noreply@comandaflow.local
MAIL_FROM_NAME="ComandaFlow SaaS"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME="ComandaFlow SaaS"
APP_ENV=local
APP_DEBUG=true
APP_URL=https://comandaflow.local
APP_KEY=

# ===========================================
# PHP CONFIGURATION
# ===========================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M